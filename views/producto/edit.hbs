<!DOCTYPE html>
<html>
    <head>
        <title>Editar productos</title>
    </head>
    <body>
        <div class="container">
            <h3><a href="/productos">Lista</a></h3>
            <h1>Editar</h1>
            <form action="/productos/update/{{ producto._id }}" method="post">
                <table>
                    <tbody>
                        <tr>
                            <td>Codigo</td>
                            <td><input type="text" name="codigo" value="{{ producto.codigo }}"/></td>
                        </tr>
                        <tr>
                            <td>Descripcion</td>
                            <td><input type="text" name="descripcion" value="{{ producto.descripcion }}"/></td>
                        </tr>
                        <tr>
                            <td>Precio</td>
                            <td><input type="text" name="precio" value="{{ producto.precio }}"/></td>
                        </tr>
                        <tr>
                            <td>Stock</td>
                            <td><input type="text" name="stock" value="{{ producto.stock }}"/></td>
                        </tr>
                        <tr>
                            <td>Marca</td>
                            <td><input type="text" name="marca" value="{{ producto.marca }}"/></td>
                        </tr>
                        <tr>
                            <td>Modelo</td>
                            <td><input type="text" name="modelo" value="{{ producto.modelo }}"/></td>
                        </tr>
                        <tr>
                            <td>Categoria</td>
                            <td><input type="text" name="categoria" value="{{ producto.categoria }}"/></td>
                        </tr>
                        <tr>
                            <td>Fecha de produccion</td>
                            <td><input type="text" name="fecha" value="{{ producto.fecha }}"/></td>
                        </tr>
                        <tr>
                            <td colspan="2"><button type="submit">Actualizar</button></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </body>
</html>